# Internet-ID Web Application Environment Configuration
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to git (it's in .gitignore)

# =============================================================================
# API Configuration
# =============================================================================

# Base URL for the Express API server
# In development: http://localhost:3001
# In production: https://api.yourdomain.com
NEXT_PUBLIC_API_BASE=http://localhost:3001

# API key for protected endpoints (must match API_KEY in root .env)
# Only needed if the API server has API_KEY configured
NEXT_PUBLIC_API_KEY=

# Canonical site URL for generating share links and badges
# Falls back to window.location.origin if not set
# In development: http://localhost:3000
# In production: https://yourdomain.com
NEXT_PUBLIC_SITE_BASE=http://localhost:3000

# =============================================================================
# Database Configuration
# =============================================================================

# Database connection URL
# MUST match the DATABASE_URL in the root .env file
# The web app and API share the same database

# Option 1: SQLite (for development)
DATABASE_URL="file:../dev.db"

# Option 2: PostgreSQL (for production)
# DATABASE_URL="postgresql://internetid:internetid@localhost:5432/internetid?schema=public"

# =============================================================================
# Authentication Configuration (NextAuth)
# =============================================================================

# NextAuth base URL (where the app is hosted)
NEXTAUTH_URL=http://localhost:3000

# Secret for encrypting session tokens
# Generate with: openssl rand -base64 32
# REQUIRED: Must be set to a random string
NEXTAUTH_SECRET=

# =============================================================================
# OAuth Provider Configuration
# =============================================================================

# GitHub OAuth
# Get credentials: https://github.com/settings/developers
# Callback URL: ${NEXTAUTH_URL}/api/auth/callback/github
GITHUB_ID=
GITHUB_SECRET=

# Google OAuth
# Get credentials: https://console.cloud.google.com/apis/credentials
# Callback URL: ${NEXTAUTH_URL}/api/auth/callback/google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Twitter/X OAuth 2.0
# Get credentials: https://developer.twitter.com/en/portal/dashboard
# Callback URL: ${NEXTAUTH_URL}/api/auth/callback/twitter
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# TikTok OAuth
# Get credentials: https://developers.tiktok.com/
# Callback URL: ${NEXTAUTH_URL}/api/auth/callback/tiktok
TIKTOK_CLIENT_ID=
TIKTOK_CLIENT_SECRET=

# Discord OAuth
# Get credentials: https://discord.com/developers/applications
# Callback URL: ${NEXTAUTH_URL}/api/auth/callback/discord
# DISCORD_CLIENT_ID=
# DISCORD_CLIENT_SECRET=

# LinkedIn OAuth
# Get credentials: https://www.linkedin.com/developers/apps
# Callback URL: ${NEXTAUTH_URL}/api/auth/callback/linkedin
# LINKEDIN_CLIENT_ID=
# LINKEDIN_CLIENT_SECRET=

# Coinbase OAuth
# Get credentials: https://www.coinbase.com/settings/api
# Callback URL: ${NEXTAUTH_URL}/api/auth/callback/coinbase
# COINBASE_CLIENT_ID=
# COINBASE_CLIENT_SECRET=

# Apple Sign In
# Get credentials: https://developer.apple.com/account/resources/identifiers/list
# Callback URL: ${NEXTAUTH_URL}/api/auth/callback/apple
# APPLE_ID=
# APPLE_TEAM_ID=
# APPLE_PRIVATE_KEY=
# APPLE_KEY_ID=

# =============================================================================
# Optional Configuration
# =============================================================================

# Node environment (development | production | test)
NODE_ENV=development

# Enable debug logging for NextAuth
# NEXTAUTH_DEBUG=true

# Custom session cookie name
# COOKIE_NAME=internet-id.session

# Force HTTPS cookies (set to true in production)
# COOKIE_SECURE=false

# Session max age in seconds (default: 30 days)
# SESSION_MAX_AGE=2592000

# JWT secret (if using JWT sessions instead of database sessions)
# If not set, uses NEXTAUTH_SECRET
# JWT_SECRET=

# =============================================================================
# Notes
# =============================================================================

# 1. NEXTAUTH_SECRET is REQUIRED - generate with: openssl rand -base64 32
# 2. DATABASE_URL must match the root .env file (shared database)
# 3. OAuth providers are optional - enable only the ones you need
# 4. Callback URLs must be registered in each provider's dashboard
# 5. In production, use HTTPS URLs and set COOKIE_SECURE=true
# 6. See docs/CONTRIBUTOR_ONBOARDING.md for detailed setup instructions
